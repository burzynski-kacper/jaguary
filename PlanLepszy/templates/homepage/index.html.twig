{% extends 'base.html.twig' %}

{% block title %}Plan Dzień{% endblock %}

{% block body %}
    <div class="container-fluid p-4">
        <!-- Nawigacja nad sekcją główną -->
        <div class="row mb-4">
            <div class="col text-center">
                <div class="btn-group" role="group" aria-label="Nawigacja">
                    <button type="button" id="view-day" class="btn btn-outline-primary">Dzień</button>
                    <button type="button" id="view-week" class="btn btn-outline-primary">Tydzień</button>
                    <button type="button" id="view-month" class="btn btn-outline-primary">Miesiąc</button>
                    <button type="button" id="view-semester" class="btn btn-outline-primary">Semestr</button>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Lewa kolumna z filtrami -->
            <div class="col-md-3 bg-light rounded shadow-sm p-3">
                <h5 class="text-primary">Filtry</h5>
                <button class="btn btn-outline-secondary w-100 mb-2">Przykładowy filtr</button>
                <button class="btn btn-outline-secondary w-100 mb-2">Przykładowy filtr</button>
                <button class="btn btn-outline-secondary w-100 mb-2">Przykładowy filtr</button>
                <button class="btn btn-outline-secondary w-100 mb-2">Przykładowy filtr</button>
                <div class="d-flex mt-3">
                    <button class="btn btn-primary flex-grow-1">Filtruj</button>
                    <button class="btn btn-light ms-2">Reset</button>
                </div>
            </div>

            <!-- Główna sekcja -->
            <div id="view-container" class="col-md-9">
                <div id="day-view" class="view-content">
                    <table class="table align-middle table-bordered text-center rounded shadow-sm">
                        <thead class="bg-light text-dark">
                        <tr>
                            <th class="p-3">Godziny</th>
                            <th>Zajęcia</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th class="p-3 bg-light text-dark">8:15 - 10:00</th>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">10:15 - 12:00</th>
                            <td class="bg-warning text-white rounded">Wykład</td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">12:15 - 14:00</th>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">14:15 - 16:00</th>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">16:15 - 18:00</th>
                            <td></td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div id="week-view" class="view-content d-none">
                    <table class="table align-middle table-bordered text-center rounded shadow-sm">
                        <thead class="bg-light text-dark">
                        <tr>
                            <th class="p-3">Godziny</th>
                            <th>Poniedziałek</th>
                            <th>Wtorek</th>
                            <th>Środa</th>
                            <th>Czwartek</th>
                            <th>Piątek</th>
                            <th>Sobota</th>
                            <th>Niedziela</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <th class="p-3 bg-light text-dark">8:15 - 10:00</th>
                            <td></td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td class="bg-warning text-white rounded">Wykład</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">10:15 - 12:00</th>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td class="bg-info text-white rounded">Audytoria</td>
                            <td class="bg-warning text-white rounded">Wykład</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">10:15 - 12:00</th>
                            <td></td>
                            <td class="bg-warning text-white rounded">Wykład</td>
                            <td class="bg-warning text-white rounded">Wykład</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">12:15 - 14:00</th>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td></td>
                            <td class="bg-warning text-white rounded">Wykład</td>
                            <td class="bg-info text-white rounded">Audytoria</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">14:15 - 16:00</th>
                            <td></td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td class="bg-warning text-white rounded">Wykład</td>
                            <td class="bg-success text-white rounded">Laboratorium</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th class="p-3 bg-light text-dark">16:15 - 18:00</th>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <div id="month-view" class="view-content d-none">
                    <div class="table-responsive">
                        <table class="table align-middle table-bordered text-center rounded shadow-sm">
                            <thead class="bg-light text-dark">
                            <tr>
                                <th>Godziny</th>
                                {% for day in 1..31 %}
                                    <th>Dzień {{ day }}</th>
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                                {% for day in 1..7 %}
                                    <tr>
                                        <th class="p-3 bg-light text-dark">8:15 - 10:00</th>
                                    {% for day2 in 1..31 %}
                                        <td></td>
                                    {% endfor %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div id="semester-view" class="view-content d-none">
                    <div class="table-responsive">
                        <table class="table align-middle table-bordered text-center rounded shadow-sm">
                            <thead class="bg-light text-dark">
                            <tr>
                                <th>Godziny</th>
                                {% for day in 1..150 %}
                                    <th>Dzień {{ day }}</th>
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for day in 1..7 %}
                                <tr>
                                    <th class="p-3 bg-light text-dark">8:15 - 10:00</th>
                                    {% for day2 in 1..150 %}
                                        <td></td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dolny pasek legendy -->
        <div class="row mt-4">
            <div class="col text-center">
                <div class="d-flex justify-content-center align-items-center flex-wrap">
                    <div class="d-flex align-items-center me-3">
                        <div class="rounded bg-success" style="width: 20px; height: 20px;"></div>
                        <span class="ms-2">Laboratoria</span>
                    </div>
                    <div class="d-flex align-items-center me-3">
                        <div class="rounded bg-warning" style="width: 20px; height: 20px;"></div>
                        <span class="ms-2">Wykłady</span>
                    </div>
                    <div class="d-flex align-items-center me-3">
                        <div class="rounded bg-info" style="width: 20px; height: 20px;"></div>
                        <span class="ms-2">Audytoria</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="rounded bg-danger" style="width: 20px; height: 20px;"></div>
                        <span class="ms-2">Seminaria</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const buttons = document.querySelectorAll('.btn-group .btn');
        const views = document.querySelectorAll('.view-content');

        buttons.forEach(button => {
            button.addEventListener('click', function() {
                // Usuwamy klasę "active" z wszystkich przycisków
                buttons.forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');

                // Zmiana widoku
                views.forEach(view => view.classList.add('d-none'));
                const targetView = this.id.replace('view-', '') + '-view';
                document.getElementById(targetView).classList.remove('d-none');
            });
        });
    });
</script>
{% endblock %}
